<div class="banner">
  <%= image_tag "banner.jpg" %>
</div>

<% if user_signed_in? %>
  <div class="new-article">
    <div class="d-flex align-items-center justify-content-between mb-3">
      <%= link_to "CrÃ©er un nouvel article", new_article_path, class: "btn btn-flat" %>
    </div>
  </div>
<% end %>

<div class="articles-container">


  <div class="card-container">

      <% @articles.each do |article| %>
        <div class="card-article">
          <div class="card-photo">
            <%= cl_image_tag article.photo_url, class: "img" %>
          </div>

          <div class="card-content">
            <% if user_signed_in? %>
              <%= link_to article_path(article), class:"title-link text-decoration-none" do %>
                <div class="card-title-in">
                  <i class="fa fa-pencil"></i>
                    <%= article.title %>
                </div>
              <% end %>
            <% else %>
              <div class="card-title">
                <%= article.title %>
              </div>
            <% end %>

            <div class="card-description">
              <%= article.description %>
            </div>

            <div class="card-attachment">
              <%= link_to "Ouvrir le document", article.attachment_url, target: :_blank, class: "dl-link" %>
            </div>
          </div>
        </div>
      <% end %>
</div>
